  .modal-dialog
    .modal-content
      .modal-body

#screamout

.footer
  .container
    %p.text-muted Place sticky footer content here.

%script#template{:type => "x-tmpl-mustache"}
  .span3.fjs-ele
    .thumbnail
      %img{src: "{{photo_url}}"}
      .bookmark-controls
        %a.btn.btn-primary.edit-control{:id => "{{id}}", href: "/screamout/contents/{{_id}}/details", "data-remote" => true}
          %span.icon-edit
        %a.btn.btn-default{href:"/screamout/contents/{{id}}",data:{method:"delete" ,confirm:"Are you sure?" }}
          %span.icon.icon-trash
      %a{target:"_blank" ,href:"{{url}}" }
        .bookmark-info
          .h5
            {{title}}
          {{#tags_array}}
          %span.label.label-default {{.}}
          {{/tags_array}}

